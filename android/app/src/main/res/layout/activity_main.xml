<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/mainactivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chooseLbl"
        android:text="Choose Quiz"
        />

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chooseLbl"></android.support.v7.widget.AppCompatSpinner>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/StartBtn"
        android:text="Start Service"
        android:layout_gravity="center"
        android:layout_below="@+id/chooseLbl"

        ></Button>

    <Button
        android:id="@+id/stopService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Service"
        android:layout_gravity="center"
        android:layout_below="@+id/StartBtn"
        >

    </Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Quiz"
        android:layout_gravity="center"
        android:id="@+id/addQuiz"
        android:layout_below="@+id/stopService"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Web Page"
        android:id="@+id/owp"
        android:layout_below="@+id/stopService"/>




</RelativeLayout>